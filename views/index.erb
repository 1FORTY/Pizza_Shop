<h2>Welcome to Pizza Shop</h2>

<div class="row">
  <% @products.each do |p| %>
    <div class="col-md-3">

      <div>
        <%= p.title %>
      </div>

      <div>
        <img src="<%= p.path_to_image %>" alt="pizza" style="width: 150px;">
      </div>

      <div>
        <%= p.description %>
      </div>

      <div>
        <%= p.size %> cm
      </div>

      <div>
        <%= p.price %> Rub
      </div>

      <div>
        <button class="btn btn-success btn-sm" onclick="add_to_cart(<%= p.id %>)">Add to cart</button>
      </div>

    </div>
  <% end %>
</div>

