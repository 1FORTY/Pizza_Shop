<h2>Cart</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Qty</th>
    </tr>
  </thead>
  <tbody>
    <% total_price = 0 %>
    <% total_qty = 0 %>
    <% @items.each_with_index do |item, index| %>
      <tr>
        <th scope="row"><%= index %></th>
        <td><%= item[0].title %></td>
        <td><%= item[0].price %></td>
        <td><%= item[1] %></td>
      </tr>
      <% total_price += item[1].to_i * item[0].price %>
      <% total_qty += item[1].to_i %>
    <% end %>

    <tr>
      <td></td>
      <td></td>
      <td><%= total_price %></td>
      <td><%= total_qty %></td>
    </tr>
  </tbody>
</table>

<form action="/cart" method="post" role="form">
  <input type="text">
  <input type="submit" class="btn btn-primary btn-lg">
</form>
